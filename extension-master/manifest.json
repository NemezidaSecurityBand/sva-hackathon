{
    "name": "DNT",
    "version": "0.0.1",
    "description": "description",
    "manifest_version": 2,
    "icons": {
        "16": "assets/icon_16x16.png",
        "32": "assets/icon_32x32.png",
        "48": "assets/icon_48x48.png",
        "128": "assets/icon_128x128.png"
    },
    "background": {
        "persistent": true,
        "scripts": ["js/background.js"]
    },
    "options_page": "html/settings.html",

    "browser_action": {
        "default_title": "DNT",
        "default_icon": {
            "16": "assets/icon_16x16.png",
            "32": "assets/icon_32x32.png"
        },
        "default_popup": "html/home.html"
    },
    "content_scripts": [
      {
        "all_frames": true,
        "match_about_blank": true,
        "run_at": "document_start",
        "matches": ["<all_urls>"],
        "js": [
            "js/settings.js",
            "js/init.js",
            "js/integration/virusTotalIntegration.js",
            "js/replaceCookie.js"
        ]
      }
    ],
    "permissions": [
        "activeTab",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "alarms",
        "notifications",
        "privacy",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": ["extension-master/*"]

}
